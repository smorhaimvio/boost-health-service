# BH Service - Production Environment Configuration

# Service Configuration
SERVICE_NAME=boosthealth-service
PORT=8001
DEBUG=false

# API Keys (comma-separated)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=prd_key_1,prd_key_2,prd_key_3

# CORS Configuration
ALLOWED_ORIGINS=https://functionalmind.com,https://www.functionalmind.com,https://app.functionalmind.com

# LLM Configuration (Grok/XAI)
LLM_PROVIDER=grok
LLM_API_KEY=your_xai_api_key_here
LLM_MODEL=grok-4-fast-non-reasoning
LLM_TIMEOUT_SECONDS=30.0

# XAI Configuration (backward compatibility)
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4
XAI_FAST_MODEL=grok-4-fast-non-reasoning
XAI_TIMEOUT_SECONDS=180.0

# Qdrant Configuration - FunctionalMind (Primary)
FUNCTIONALMIND_API_KEY=fm_prd_api_key_here
FUNCTIONALMIND_QDRANT_URL=https://your-prd-qdrant.cloud.qdrant.io:6333
FUNCTIONALMIND_QDRANT_APIKEY=your_qdrant_api_key_here
FUNCTIONALMIND_QDRANT_COLLECTION=fm_papers

# Legacy Qdrant Configuration (fallback)
QDRANT_URL=https://your-prd-qdrant.cloud.qdrant.io:6333
QDRANT_APIKEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=fm_papers
QDRANT_TIMEOUT_SECONDS=600.0

# Search Configuration
DEFAULT_LIMIT=5
DEFAULT_YEAR_FROM=2018
DEFAULT_MIN_CITATIONS=5
DEFAULT_LEXICAL_MIN=0.05

# Temperature Settings
TEMPERATURE_FAST=0.3
TEMPERATURE_MAIN=0.2

# AWS Configuration (for CloudWatch, etc.)
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

