option_settings:
  # Docker platform configuration
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: none
    
files:
  "/etc/docker/daemon.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "log-driver": "awslogs",
        "log-opts": {
          "awslogs-region": "us-east-1",
          "awslogs-group": "/aws/elasticbeanstalk/bh-service"
        }
      }

commands:
  01_restart_docker:
    command: "systemctl restart docker"
    ignoreErrors: true

